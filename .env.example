# Environment
ENVIRONMENT=development

# Azure AD B2C Configuration
AZURE_B2C_TENANT_NAME=your-tenant
AZURE_B2C_TENANT_ID=your-tenant-id
AZURE_B2C_CLIENT_ID=your-client-id
AZURE_B2C_CLIENT_SECRET=your-client-secret
AZURE_B2C_USER_FLOW=B2C_1_signin
AZURE_B2C_REDIRECT_URI=http://localhost:8000/auth/b2c/callback

# Microsoft Entra ID Configuration
AZURE_ENTRA_TENANT_ID=your-entra-tenant-id
AZURE_ENTRA_CLIENT_ID=your-entra-client-id
AZURE_ENTRA_CLIENT_SECRET=your-entra-client-secret
AZURE_ENTRA_REDIRECT_URI=http://localhost:8000/auth/entra/callback

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Azure Cosmos DB Configuration
COSMOS_ENDPOINT=https://localhost:8081
COSMOS_KEY=your-cosmos-key
COSMOS_DATABASE=eva-auth
COSMOS_CONTAINER_AUDIT=audit-logs
COSMOS_CONTAINER_APIKEYS=api-keys

# Azure Key Vault Configuration
KEYVAULT_URL=https://your-keyvault.vault.azure.net/

# JWT Configuration
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_SECRET_KEY=your-secret-key-for-development-hs256

# Session Configuration
SESSION_COOKIE_NAME=eva_session_id
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=strict
SESSION_MAX_AGE_SECONDS=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=20
RATE_LIMIT_WINDOW_SECONDS=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=true

# Mock Authentication (Development Only)
ENABLE_MOCK_AUTH=true
MOCK_AUTH_SECRET=test-secret-key-12345
